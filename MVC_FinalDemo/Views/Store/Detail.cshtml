@model MVC_FinalDemo.Models.ProductCategoryViewModel

@{
    ViewBag.Title = "產品資料";
    Layout = "~/Views/Shared/_LayoutMemberIndex.cshtml";
}

<h2>產品資料</h2>
<div class="row ">
    <div class="col-md-1 my-5">
        <div class="btn-group-vertical">
            @foreach (var item in Model.Category)
            {
                <a href="@Url.Action("Detail", new { id=item.Id})" class="btn btn-info">@item.fName</a>
            }

        </div>
    </div>
    <div class="col-md-8">
        <table class="table table-striped my-4">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().fProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().fProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().fProductCatagory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.FirstOrDefault().fProductPrice)
                </th>
            </tr>

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fProductCatagory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fProductPrice)
                    </td>


                </tr>
            }

        </table>
    </div>
</div>


